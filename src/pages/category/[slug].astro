---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/Container.astro';
import PostGrid from '../../components/PostGrid.astro';
import Pagination from '../../components/Pagination.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { categorySlug, getCategoryName } from '../../lib/slug';

export async function getStaticPaths() {
	const allPosts = await getCollection('blog');
	
	// Get all unique categories
	const categories = new Set<string>();
	allPosts.forEach((post) => {
		if (post.data.categories && post.data.categories.length > 0) {
			post.data.categories.forEach((category) => {
				categories.add(category);
			});
		}
	});
	
	const pageSize = 9;
	
	// Generate paths for each category (page 1 only)
	const paths: any[] = [];
	for (const category of categories) {
		const categoryPosts = allPosts.filter((post) => 
			post.data.categories && post.data.categories.includes(category)
		);
		const totalPages = Math.ceil(categoryPosts.length / pageSize);
		
		// Only generate page 1 for this route
		const start = 0;
		const end = pageSize;
		const pageData = categoryPosts.slice(start, end);
		
		const slug = categorySlug(category);
		paths.push({
			params: { slug },
			props: { 
				page: {
					data: pageData,
					currentPage: 1,
					lastPage: totalPages,
					url: {
						current: `/category/${slug}/`,
						prev: undefined,
						next: totalPages > 1 ? `/category/${slug}/page/2/` : undefined,
						first: `/category/${slug}/`,
						last: totalPages > 1 ? `/category/${slug}/page/${totalPages}/` : `/category/${slug}/`,
					}
				}, 
				category 
			},
		});
	}
	
	return paths;
}

interface Page {
	data: any[];
	currentPage: number;
	lastPage: number;
	url: {
		current: string;
		prev?: string;
		next?: string;
		first?: string;
		last?: string;
	};
}

const { page, category } = Astro.props as { page: Page; category: string };
// Get the slug from params and find the category name
const slugParam = Astro.params.slug || '';
const categoryName = getCategoryName(slugParam) || category;
const slug = categorySlug(categoryName);

// Get total post count for this category
const allPosts = await getCollection('blog');
const categoryPosts = allPosts.filter((post) => 
	post.data.categories && post.data.categories.includes(categoryName)
);
const totalPostCount = categoryPosts.length;
---

<BaseLayout title={`${category} - ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
	<Container>
		<section>
			<h1 class="text-2xl md:text-3xl font-bold mb-6 text-center">
				<i class="fa-regular fa-folder mr-2"></i>
				{categoryName} ({totalPostCount})
			</h1>
			<PostGrid posts={page.data} />
			<Pagination 
				currentPage={page.currentPage} 
				totalPages={page.lastPage}
				getPageUrl={(pageNum) => pageNum === 1 ? `/category/${slug}/` : `/category/${slug}/page/${pageNum}/`}
			/>
		</section>
	</Container>
</BaseLayout>

